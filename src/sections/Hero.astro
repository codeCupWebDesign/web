---
import { Image } from '@astrojs/image/components';
import img from '../../public/assets/Pantalla_1920.png';
---

<section class="relative">
    <div
        class="container flex flex-col-reverse items-center xl:items-start xl:flex-row justify-center mt-10 xl:mt-28 2xl:gap-4"
    >
        <div class="lg:mt-12 hero-text-container">
            <div class="flex flex-col items-center xl:items-start">
                <h2
                    class="text-white font-bold xl:text-start capitalize size-sub-title"
                >
                    grandes mentes
                </h2>
                <h1
                    class="text-gradient size-title text-center xl:text-start font-bold"
                >
                    Programación web y Marketing
                </h1>
                <div class="2xl:mt-4">
                    <button
                        class="rounded-full border-2 px-4 2xl:px-4 h-12 border-white font-bold capitalize bg-white text-black transition ease-out"
                    >
                        mas información
                    </button>
                </div>
            </div>
        </div>
        <Image src={img} alt="descriptive text" class="img-hero" />
    </div>
</section>

<style>
    @media (min-width: 1024px) {
        .hero-text-container {
            width: 750px;
        }
    }

    .size-sub-title {
        font-size: var(--size-lg);
    }

    @media (min-width: 768px) {
        .size-sub-title {
            font-size: var(--size-xl);
        }
    }

    @media (min-width: 1024px) {
        .size-sub-title {
            font-size: var(--size-2xl);
        }
    }

    @media (min-width: 1280px) {
        .size-sub-title {
            font-size: var(--size-4xl);
        }
    }

    .size-title {
        font-size: var(--size-3xl);
    }

    @media (min-width: 475px) {
        .size-title {
            font-size: var(--size-4xl);
        }
    }

    @media (min-width: 768px) {
        .size-title {
            font-size: var(--size-5xl);
        }
    }

    @media (min-width: 1024px) {
        .size-title {
            font-size: var(--size-6xl);
        }
    }

    @media (min-width: 1280px) {
        .size-title {
            font-size: var(--size-6xl);
        }
    }

    .img-hero {
        width: 450px;
    }

    @media (min-width: 768px) {
        .img-hero {
            width: 500px;
            margin-inline: auto;
        }
    }

    @media (min-width: 1024px) {
        .img-hero {
            width: 600px;
            margin-inline: auto;
        }
    }

    @media (min-width: 1280px) {
        .img-hero {
            margin: 0;
        }
    }
</style>
