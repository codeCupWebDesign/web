---
import { Image } from '@astrojs/image/components';
import img from '../../public/assets/Pantalla_1920.png';
import heroImage from '../assets/images/boba-software-developer-coding-with-two-monitors.png';
---

<section class="relative">
    <div class="container">
        <div
            class="flex flex-col-reverse items-center xl:items-start xl:flex-row justify-center mt-10 pb-10 xl:mt-20 2xl:gap-4"
        >
            <div class="hero-text-container">
                <div class="xl:mt-12">
                    <div class="flex flex-col items-center xl:items-start">
                        <h1
                            class="size-title text-center xl:text-start font-bold"
                        >
                            Impulsa tu presencia en línea con una Agencia
                            Digital Confiable
                        </h1>
                        <p class="text-size text-center xl:text-start">
                            Potenciamos tu marca a través de servicios de diseño
                            de páginas web, estrategias de marketing digital y
                            posicionamiento SEO efectivo.
                        </p>
                        <div class="mt-2 2xl:mt-4">
                            <button class="primary-button">contactar</button>
                        </div>
                    </div>
                </div>
            </div>
            <Image src={img} alt="descriptive text" class="img-hero" />
        </div>
    </div>
</section>

<style>
    @media (min-width: 1024px) {
        .hero-text-container {
            width: 750px;
        }
    }

    .text-size {
        font-size: var(--size-sm);
    }

    @media (min-width: 768px) {
        .text-size {
            font-size: var(--size-base);
        }
    }

    @media (min-width: 1024px) {
        .text-size {
            font-size: var(--size-xl);
        }
    }

    @media (min-width: 1280px) {
        .size-sub-title {
            font-size: var(--size-4xl);
        }
    }

    .size-title {
        font-size: var(--size-xl);
    }

    @media (min-width: 475px) {
        .size-title {
            font-size: var(--size-3xl);
        }
    }

    @media (min-width: 768px) {
        .size-title {
            font-size: var(--size-4xl);
        }
    }

    @media (min-width: 1024px) {
        .size-title {
            font-size: var(--size-5xl);
        }
    }

    .img-hero {
        width: 450px;
    }

    @media (min-width: 768px) {
        .img-hero {
            width: 500px;
            margin-inline: auto;
        }
    }

    @media (min-width: 1024px) {
        .img-hero {
            width: 600px;
            margin-inline: auto;
        }
    }

    @media (min-width: 1280px) {
        .img-hero {
            margin: 0;
        }
    }
</style>
